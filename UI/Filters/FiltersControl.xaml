<UserControl x:Class="ONE.UI.Filters.FiltersControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Height="Auto" Width="Auto">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Filters Row -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Background="#27509B" Height="75"
                    Name="FiltersPanel">
            <ComboBox x:Name="RegionDropdown" Width="150" Margin="5" Foreground="Black" 
                      SelectionChanged="FilterSelectionChanged"/>
            <ComboBox x:Name="ClusterDropdown" Width="150" Margin="5" Foreground="Black" 
                      SelectionChanged="FilterSelectionChanged"/>
            <ComboBox x:Name="TeamDropdown" Width="150" Margin="5" Foreground="Black" 
                      SelectionChanged="FilterSelectionChanged"/>
            <ComboBox x:Name="ESADropdown" Width="150" Margin="5" Foreground="Black" 
                      SelectionChanged="FilterSelectionChanged"/>
            <ComboBox x:Name="CustomerDropdown" Width="150" Margin="5" Foreground="Black" 
                      SelectionChanged="FilterSelectionChanged"/>
        </StackPanel>
    </Grid>
</UserControl>
